  "bugs": {
    "url": "https://github.com/mystere10/Questioner/issues"
  },
  "homepage": "https://github.com/mystere10/Questioner#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "make-runnable": "^1.3.6",
    "mocha": "^5.2.0",
