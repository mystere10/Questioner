{
  "name": "questioner",
  "version": "1.0.0",
  "description": "This project will allow a user to post a question in a meetup then a question with most votes is selected for the discussion",
  "main": "./src/index.js",
  "scripts": {
    "build": "babel src -d src/dist",
    "server": "nodemon src/index.js --exec babel-node",
    "start": "babel-node src/db/migrations.js | cross-env babel-node src/index.js",
    "test": "cross-env babel-node src/db/migrations.js | cross-env nyc --reporter=text --reporter=lcov mocha --timeout 25000 --require @babel/register tests/*.js --exit || true",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mystere10/Questioner.git"
  },
