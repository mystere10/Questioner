{
  "name": "questioner",
  "version": "1.0.0",
  "description": "This project will allow a user to post a question in a meetup then a question with most votes is selected for the discussion",
  "main": "./src/index.js",
  "scripts": {
    "build": "babel src -d src/dist",
    "server": "nodemon ./src/index.js --exec babel-node",
    "start": "node ./src/dist/index.js",
    "heroku-postbuild": "npm install",
    "test": "nyc --reporter=text --reporter=lcov mocha --timeout 25000 --require babel-register tests/*.js --exit || true",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mystere10/Questioner.git"
  },
  "author": "Nkunzi Innocent",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mystere10/Questioner/issues"
  },
  "homepage": "https://github.com/mystere10/Questioner#readme",
  "devDependencies": {
    "@babel/node": "^7.2.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.0",
    "express": "^4.16.4",
    "moment": "^2.23.0",
    "morgan": "^1.9.1",
    "uuid": "^3.3.2"
  }
}
